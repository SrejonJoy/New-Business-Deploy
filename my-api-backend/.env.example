APP_NAME=BusinessWebsite
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

LOG_CHANNEL=stack
LOG_LEVEL=warning

# URL to your frontend (same-origin recommended). Used for post-login redirects.
# If using free subdomains (split origin), set the SPA URL here, e.g. https://yourapp.netlify.app
FRONTEND_URL=https://yourdomain.com

# Database
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=business
DB_USERNAME=business
DB_PASSWORD=secret

# Cache / Queue / Session
CACHE_DRIVER=file
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
# If you own a domain and run SPA+API under it, set a shared cookie domain like .yourdomain.com.
# If using split-origin free subdomains, leave empty.
SESSION_DOMAIN=.yourdomain.com
QUEUE_CONNECTION=sync

